<assembly>
    <formats>
        <format>dir</format>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>

    <baseDirectory>/</baseDirectory>
    <fileSets><!--
        <fileSet>
            <directory>../lealone-database/lealone-dist/bin</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../lealone-database/lealone-dist/conf</directory>
            <outputDirectory>conf</outputDirectory>
        </fileSet>-->
        <fileSet>
            <directory>dist/bin</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>web/vertx/src/main/resources/js</directory>
            <outputDirectory>js</outputDirectory>
        </fileSet>
    </fileSets>

    <files><!--
        <file>
            <source>dist/target/lealone-plugins-${project.version}.jar</source>
            <outputDirectory>lib</outputDirectory>
        </file>-->
    </files>

    <moduleSets>
        <moduleSet>
            <includes>
                <include>org.lealone:lealone-vertx</include>
            </includes>
            <binaries>
                <unpack>false</unpack>
                <outputDirectory>plugins/lealone-vertx</outputDirectory>
                <dependencySets>
                    <dependencySet>
                        <useTransitiveFiltering>true</useTransitiveFiltering>
                        <useTransitiveDependencies>true</useTransitiveDependencies>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includes>
                <include>org.lealone:lealone-spring</include>
            </includes>
            <binaries>
                <unpack>false</unpack>
                <outputDirectory>plugins/lealone-spring</outputDirectory>
                <dependencySets>
                    <dependencySet>
                        <useTransitiveFiltering>true</useTransitiveFiltering>
                        <useTransitiveDependencies>true</useTransitiveDependencies>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includes>
                <include>org.lealone:lealone-mvstore</include>
            </includes>
            <binaries>
                <unpack>false</unpack>
                <outputDirectory>plugins/lealone-mvstore</outputDirectory>
                <dependencySets>
                    <dependencySet>
                        <useTransitiveFiltering>true</useTransitiveFiltering>
                        <useTransitiveDependencies>true</useTransitiveDependencies>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includes>
                <include>org.lealone:lealone-memory</include>
            </includes>
            <binaries>
                <unpack>false</unpack>
                <outputDirectory>plugins/lealone-memory</outputDirectory>
                <dependencySets>
                    <dependencySet>
                        <useTransitiveFiltering>true</useTransitiveFiltering>
                        <useTransitiveDependencies>true</useTransitiveDependencies>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includes>
                <include>org.lealone:lealone-sqlline</include>
            </includes>
            <binaries>
                <unpack>false</unpack>
                <outputDirectory>lib/client</outputDirectory>
                <dependencySets>
                    <dependencySet>
                        <useTransitiveFiltering>true</useTransitiveFiltering>
                        <useTransitiveDependencies>true</useTransitiveDependencies>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
